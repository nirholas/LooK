{
  "name": "look-demo",
  "version": "2.1.0",
  "description": "AI-powered product demo video generator - one command, professional results",
  "bin": {
    "look": "./bin/repovideo.js",
    "repovideo": "./bin/repovideo.js"
  },
  "type": "module",
  "scripts": {
    "start": "node bin/repovideo.js",
    "demo": "node bin/repovideo.js demo",
    "quick": "node bin/repovideo.js quick",
    "serve": "node bin/repovideo.js serve",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:ui": "cd ui && npm install && npm run build",
    "dev:ui": "cd ui && npm install && npm run dev",
    "docs:serve": "mkdocs serve",
    "docs:build": "mkdocs build",
    "docs:deploy": "mkdocs gh-deploy",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ bin/ --ext .js,.ts",
    "lint:fix": "eslint src/ bin/ --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts}\" \"bin/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.{js,ts}\" \"bin/**/*.js\"",
    "prepublishOnly": "npm test && npm run build:ui",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "demo",
    "video",
    "ai",
    "product-demo",
    "screen-recording",
    "cursor-tracking",
    "automation",
    "marketing",
    "saas"
  ],
  "author": "nichbot",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "express": "^4.22.1",
    "marked": "^12.0.0",
    "openai": "^4.28.0",
    "ora": "^8.0.1",
    "playwright": "^1.57.0",
    "sharp": "^0.34.0",
    "simple-git": "^3.22.0",
    "webdriverio": "^9.0.0",
    "ws": "^8.19.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.19.30",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nirholas/LooK.git"
  },
  "bugs": {
    "url": "https://github.com/nirholas/LooK/issues"
  },
  "homepage": "https://github.com/nirholas/LooK#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "bin/",
    "src/",
    "ui/dist/",
    "README.md",
    "LICENSE"
  ]
}
